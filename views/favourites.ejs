
<%-include("partials/header.ejs")%>
    <% if (locals.favourites) {%>
        <p class="my-list">List of favourites</p>
    <div class="books-section favourite-section">
        <% favourites.forEach((favourite) => { %>
            <div class="image-container">
              <!-- <i class="far fa-heart heart-icon"></i> -->
                <div class="image-section">
                    <a href="/book/<%= favourite.book_id %>">
                        <img src="https://covers.openlibrary.org/b/id/<%=favourite.book_id%>-M.jpg"/>
                    </a>
            
                </div>
                <div class="book-description">
                    <p class="book-title"><%= favourite.title %></p>
                    <p><%=favourite.author%></p>
                </div>
            </div>
                 
       <% }); %>
        </div>
        <% } %>
    <%-include('partials/footer.ejs')%>